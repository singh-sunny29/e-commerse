<%- include("../partials/header")%>
<%- include("../partials/navbar")%>

 
<div class="container" style="margin-top: 7%;">
    <section id="heading">
        <h1 class="display-3">MyCart</h1>
    </section>
    <%-include("../partials/flash")%>
    <div class="row">
        <%for(let item of products){%>
            <div class="col col-lg-3 col-md-6 col-sm-6 " >
                <div class="card m-2 p-2 text-center " style="width: 17rem; height:65vh;">
                    <img src="<%=item.img%>" class="card-img-top p-1 " style= "height:45%; " >
                    <div class="card-body">
                      <h5 class="card-title"><%=item.name%></h5>
                      <h3 class="card-title">Rs.<%=item.price%></h3>
                      <p class="card-text"><%=item.desc.substring(0,30)%>...</p>
                      <a href="products/<%=item._id%>" class="btn btn-outline-primary" style="margin-bottom:5px">view info</a>
                    </div>
                </div>
            </div>
        <%}%>
    </div>
      
       
  </div>
    
<%- include("../partials/footer")%>
